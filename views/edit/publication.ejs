<%- contentFor('body') %>
<div class="col-md-6 shadow p-3 bg-white rounded" style="height: 40%; margin-bottom: 1em;">
    <h2>Editar publicação</h2>
    <% data.forEach(function(details) { %>
    <form action="/pub/<%= details._id %>" method="POST">
        <label for="name">Nome</label>
        <input
            class="form-control form-control-sm"
            required
            type="text"
            class="form-control"
            name="name"
            id="name"
            placeholder="Nome"
            value="<%= details.name %>"
        />
        <label for="description">Descrição</label>
        <textarea
            class="form-control form-control-sm"
            name="description"
            id="description"
            rows="3"
            placeholder="Descrição"
        ><%= details.description.trim() %></textarea>
        <label for="autor">Autor</label>
        <input
            required
            type="text"
            class="form-control form-control-sm"
            name="autor"
            id="autor"
            placeholder="Autor"
            value="<%= details.autor %>"
        />
        <div class="row">
            <div class="col-sm-6">
                <label for="createAt">Data de criação</label>
                <input
                    required
                    type="date"
                    class="form-control form-control-sm col"
                    name="createAt"
                    id="createAt"
                    placeholder="Data de criação"
                    value="<%= details.createAt %>"
                />
            </div>
            <div class="col-sm-6">
                <label for="type">Tipo</label>
                <select 
                    name="type" id="type" 
                    class="form-control form-control-sm"
                >
                    <% const options = [ {value: "tcc", label: "TCC"},{value:"article", label: "Artigo"} ]; %>
                    <% for(const option of options) { %>
                        <% const selected = option.value === details.type%>
                        <option 
                            value="<%= option.value %>" 
                            <%= options ? "selected" : "" %>
                        >
                            <%= option.label %>
                        </option>
                    <% } %>
                </select>
            </div>
        </div>
        <label for="tag">Tags</label>
        <% const tag = details.tag || [] %>
        <textarea
            type="text" 
            class="form-control form-control-sm"
            id="tag"
            rows="3" 
            name="tag" 
            placeholder="Tags (use o prdfixo # e um espaçamento)" 
        ><%= tag.join(' ') %></textarea>
        <div  class="form-group" style="padding-top: 1rem;">
            <button class="btn btn-primary" type="submit">Salvar</button>
        </div>
    </form>
    <% }) %>
</div>

