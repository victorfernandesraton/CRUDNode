<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>My CRUD in NodeJS</title>
    </head>
    <body>
        <h2>Livros</h2>
        <table border="1">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Titulo</td>
                    <td>Descricao</td>
                    <td>Editora</td>
                    <td>Data</td>
                    <td>Assunto</td>
                    <td>Ações</td>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(details) { %>
                <tr>
                    <td><%= details._id %></td>
                    <td><%= details.titulo %></td>
                    <td><%= details.descricao %></td>
                    <td><%= details.editora %></td>
                    <td><%= details.data %></td>
                    <td><%= details.assunto %></td>
                    <td>
                        <a href="/livro/edit/<%= details._id %>">Editar</a> -
                        <a href="/livro/delete/<%= details._id %>">Deletar</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <button><a href="/livro/create">Novo</a></button>
    </body>
</html>
