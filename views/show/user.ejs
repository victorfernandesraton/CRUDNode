<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>My CRUD in NodeJS</title>
    </head>
    <body>
        <h2>Registros</h2>
        <table border="1">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nome</td>
                    <td>Sobrenome</td>
                    <td>CPF</td>
                    <td>Ação</td>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(details) { %>
                <tr>
                    <td><%= details._id %></td>
                    <td><%= details.firstname %></td>
                    <td><%= details.lastname %></td>
                    <td><%= details.cpf %></td>
                    <td>
                        <a href="/user/edit/<%= details._id %>">Editar</a> -
                        <a href="/user/delete/<%= details._id %>">Deletar</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <button><a href="/user/create">Novo</a></button>
    </body>
</html>
