<%- contentFor('body') %>
<div>
    <div class="col-md-6 shadow p-3 bg-white rounded" style="height: 40%; margin-bottom: 1em;">
        <h2>Cadastrar publicação</h2>
        <form action="/pub/" method="POST">
            <label for="name">Nome</label>
            <input
                class="form-control form-control-sm"
                required
                type="text"
                class="form-control"
                name="name"
                id="name"
                placeholder="Nome"
            />
            <label for="description">Descrição</label>
            <textarea
                class="form-control form-control-sm"
                name="description"
                id="description"
                rows="3"
                placeholder="Descrição"
            ></textarea>
            <label for="autor">Autor</label>
            <input
                required
                type="text"
                class="form-control form-control-sm"
                name="autor"
                id="autor"
                placeholder="Autor"
            />
            <div class="row">
                <div class="col-sm-6">
                    <label for="createAt">Data de criação</label>
                    <input
                        required
                        type="date"
                        class="form-control form-control-sm col"
                        name="createAt"
                        id="createAt"
                        placeholder="Data de criação"
                    />
                </div>
                <div class="col-sm-6">
                    <label for="type">Tipo</label>
                    <select 
                        name="type" id="type" 
                        class="form-control form-control-sm"
                    >
                        <% const options = [ {value: "tcc", label: "TCC"},{value:"article", label: "Artigo"} ]; %>
                        <% for(const option of options) { %>
                            <option value="<%= option.value %>"><%= option.label %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <label for="tag">Tags</label>
            <textarea
                class="form-control form-control-sm"
                id="tag"
                rows="3" 
                name="tag" 
                placeholder="Tags (use o prdfixo # e um espaçamento)" 
            ></textarea>
            <div  class="form-group" style="padding-top: 1rem;">
                <button class="btn btn-primary" type="submit">Salvar</button>
            </div>
        </form>
    </div>
</div>
